<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FinansCepte.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FinansCepte"
    Title="FinansCepte">

    <TabBar>
        <Tab Title="Özet">
            <ShellContent ContentTemplate="{DataTemplate local:DashboardPage}"/>
        </Tab> 
        <Tab Title="Piyasalar">
            <ShellContent ContentTemplate="{DataTemplate local:MarketsPage}"/>
        </Tab>
        <Tab Title="İşlem Ekle">
            <ShellContent ContentTemplate="{DataTemplate local:AddTransactions}"/>
        </Tab>
        <Tab Title="Analiz">
            <ShellContent ContentTemplate="{DataTemplate local:AnalysisPage}"/>
        </Tab>
    </TabBar>
</Shell>
